<html>
    <head>
        <title>
            <%=title %>
        </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js" ></script>
        <link rel="stylesheet" href="/css/layout.css">
        
        <%- style %>

    </head>
    <body>
        <%- include('_header');%>  <!--this is called partial concept basically we use this concept when we need to repeat some part of our website in every page to without writting code for this in every page we can use this-->
       
        <%- body %> 
        <%- include('_footer');%>
        <%- script %>
        <script>
           <% if(flash.success && flash.success.length>0){%> 
            new Noty({
                theme:'relax',
                text: "<%= flash.success %>",
                type:'sucess',
                layout:'topRight',
                timeout:1500
            }).show();
            <%} %>

            <% if(flash.error && flash.error.length>0){%> 
            new Noty({
                theme: 'themeName',
                text: "<%= flash.error %>",
                type:'error',
                layout:'topRight',
                timeout:1500
            }).show();
            <%} %>
        </script>
    </body>
</html>